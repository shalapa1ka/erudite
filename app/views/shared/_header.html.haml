%header.p-3.bg-dark.text-white.w-100
  .container
    .d-flex.flex-wrap.align-items-center.justify-content-center.justify-content-lg-start
      %a.d-flex.align-items-center.mb-2.mb-lg-0.text-white.text-decoration-none{:href => "/"}
      %ul.nav.col-12.col-lg-auto.me-lg-auto.mb-2.justify-content-center.mb-md-0
        %li
          = link_to 'Home', home_path, class: 'nav-link px-2 text-secondary'
        %li
          %a.nav-link.px-2.text-white{:href => "#"} Games
        %li
          %a.nav-link.px-2.text-white{:href => "#"} Account
      .text-end
        -if user_signed_in?
          %span.me-4= "Hello, #{current_user.name}!"
          =link_to 'Log out', destroy_user_session_path, method: :delete, class: 'btn btn-danger'
        -else
          =link_to 'Login', new_user_session_path, class: 'btn btn-outline-light me-2'
          =link_to 'Sign-up', new_user_registration_path, class: 'btn btn-warning'
